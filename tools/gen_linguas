#!/usr/bin/env bash

# Create po/LINGUAS from the names of the available po files.

dir=po
out=LINGUAS

if [ ! -d ${dir} ]; then
    echo ${dir} directory does not exist, exiting
    exit 1
fi

cd ${dir}
echo '# Generated by tools/gen_linguas.' >${out}
echo '# Keep this file sorted alphabetically, one language code per line.' >>${out}
ls -1 *.po | cut -d . -f 1 >>${out}
cd ..

